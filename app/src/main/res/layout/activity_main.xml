            android:src="@mipmap/cycling_icon"
            android:scaleType="fitXY"
            android:layout_below="@+id/row_plank"
            android:layout_alignStart="@+id/plank_icon" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/walking_icon"
            android:background="#6484c6"
            android:src="@mipmap/walking_icon"
            android:scaleType="fitXY"
            android:layout_above="@+id/textView_pullup"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/stairclimbing_icon"
            android:background="#6484c6"
            android:src="@mipmap/stairsclimbing_icon"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/jogging_icon"
            android:layout_alignStart="@+id/textView_jumpingjacks" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/jogging_icon"
            android:background="#6484c6"
            android:src="@mipmap/jogging_icon"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/row_cycling" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/swimming_icon"
            android:background="#6484c6"
            android:src="@mipmap/swimming_icon"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/stairclimbing_icon"
            android:layout_alignStart="@+id/cycling_icon" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/textView_swimming"
            android:layout_alignStart="@+id/row_cycling"
            android:layout_alignEnd="@+id/row_situp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_swimming"
                android:textSize="12dp"
                android:layout_weight="0.07"
                android:textAlignment="center"
                android:layout_row="0"
                android:layout_column="7"
                android:hint="# of"
                android:layout_toStartOf="@+id/textView_cycling"
                android:layout_below="@+id/textView_pullup"
                android:textColor="#fa4b48" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Minutes"
                android:id="@+id/textView_swimming"
                android:layout_row="0"
                android:layout_column="8"
                android:textSize="12dp"
                android:layout_below="@+id/row_situp"
                android:textAlignment="center"
                android:textColor="#fa4b48" />
        </LinearLayout>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/calories"
            android:src="@mipmap/calories_icon"
            android:scaleType="center"
            android:layout_above="@+id/pushup_icon"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Weight"
            android:textAlignment="center"
            android:weightSum="1"
            android:layout_alignTop="@+id/calories"
            android:layout_toEndOf="@+id/textView_cycling">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_weight"
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_row="0"
                android:layout_column="7"
                android:layout_below="@+id/MainLayout"
                android:layout_toEndOf="@+id/row_leglift"
                android:hint="# of"
                android:textColor="#fa4b48"
                android:phoneNumber="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="lb"
                android:id="@+id/textView_weight"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_marginEnd="34dp"
                android:layout_below="@+id/num_cal"
                android:layout_alignParentEnd="true"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="#fa4b48" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
