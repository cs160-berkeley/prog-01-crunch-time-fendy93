            android:layout_above="@+id/textView_swimming"
            android:layout_toEndOf="@+id/textView_leglift"
            android:textColor="#fa4b48" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reps"
            android:id="@+id/reps_pullup"
            android:layout_row="0"
            android:layout_column="8"
            android:textSize="12dp"
            android:layout_below="@+id/min_jogging"
            android:layout_toEndOf="@+id/textView_leglift"
            android:textAlignment="center"
            android:textColor="#fa4b48" />

    </LinearLayout>

    <LinearLayout
